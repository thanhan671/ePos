<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thanhan.epos">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EPos">
        <activity
            android:name=".LoginActivity"
            android:exported="true">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>
        <activity android:name=".AddProductActivity" />
        <activity
            android:name=".EditStaffAcountActivity"
            android:exported="false" />
        <activity
            android:name=".StaffAcountActivity"
            android:exported="false" />
        <activity
            android:name=".AddAcountStaffActivity"
            android:exported="false" />
        <activity android:name=".AddProductTypeActivity" />
        <activity android:name=".Staff_MainActivity" />
        <activity
            android:name=".Admin_MainActivity"
            android:exported="true">

        </activity>
        <activity
            android:name=".Capture"
            android:screenOrientation="fullSensor"
            android:windowSoftInputMode="stateAlwaysHidden"></activity>
    </application>

</manifest>