<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateImport">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroundedit"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:layout_editor_absoluteX="-147dp"
        tools:layout_editor_absoluteY="-365dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#E12121"
            android:textSize="34sp" />

        <EditText
            android:id="@+id/edt_nhap_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:ems="10"
            android:enabled="false"
            android:hint="Mã Code"
            android:inputType="textPersonName"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/edt_nhap_tenhang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Tên Hàng"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/edt_nhap_soluong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="Số Lượng"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/edt_nhap_ngaynhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Ngày Nhập"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/edt_nhap_ngaysua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Ngày Sửa"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/edt_nhap_thanhtien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Thành Tiền"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_nhap_capnhat"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:backgroundTint="#EA8484"
            android:text="CẬP NHẬT"
            android:layout_marginTop="50dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btn_nhap_xoa"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:text="XÓA"
            android:backgroundTint="#EA8484"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/btn_nhap_huy"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:text="HỦY"
            android:backgroundTint="#EA8484"
            android:textColor="@color/black"
            android:textStyle="bold"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>