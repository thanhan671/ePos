<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateImportBill">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroundedit"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:layout_editor_absoluteX="-147dp"
        tools:layout_editor_absoluteY="-365dp">

        <TextView
            android:id="@+id/tv_phieunhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#E12121"
            android:textSize="34sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã Code:"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_nhap_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:ems="10"
                android:enabled="false"
                android:text="Mã Code"
                android:inputType="textPersonName"
                android:textColor="#535252"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên Hàng:"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/edt_nhap_tenhang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:ems="10"
                android:enabled="false"
                android:text="Tên Hàng"
                android:inputType="textPersonName"
                android:textColor="#2C2C2C"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số Lượng:"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/edt_nhap_soluong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:ems="10"
                android:text="Số Lượng"
                android:inputType="number"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày Nhập:"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/edt_nhap_ngaynhap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:ems="10"
                android:enabled="false"
                android:text="Ngày Nhập"
                android:inputType="textPersonName"
                android:textColor="#2C2C2C"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày Sửa:"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/edt_nhap_ngaysua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:ems="10"
                android:enabled="false"
                android:text="Ngày Sửa"
                android:inputType="textPersonName"
                android:textColor="#2C2C2C"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thành Tiền:"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/edt_nhap_thanhtien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:text="Thành Tiền"
                android:inputType="textPersonName"
                android:textColor="#2C2C2C"
                android:textSize="24sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_nhap_capnhat"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:backgroundTint="#EA8484"
            android:text="CẬP NHẬT"
            android:layout_marginTop="50dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btn_nhap_xoa"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:text="XÓA"
            android:backgroundTint="#EA8484"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/btn_nhap_huy"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:text="HỦY"
            android:backgroundTint="#EA8484"
            android:textColor="@color/black"
            android:textStyle="bold"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>