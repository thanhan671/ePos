<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImportBill">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroundedit"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:layout_editor_absoluteX="-147dp"
        tools:layout_editor_absoluteY="-365dp">

        <TextView
            android:id="@+id/tv_themphieu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="THÊM PHIẾU NHẬP"
            android:textAlignment="center"
            android:textColor="#EA8484"
            android:textSize="34sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/textViewID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID:"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_nhap_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:ems="10"
                android:enabled="false"
                android:text="ID"
                android:inputType="textPersonName"
                android:textColor="#717171"
                android:textSize="24sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã Code:"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_nhap_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:ems="10"
                android:enabled="false"
                android:text="Mã Code"
                android:inputType="textPersonName"
                android:textColor="#717171"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên Hàng:"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/edt_nhap_tenhang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:ems="10"
                android:enabled="false"
                android:text="Tên Hàng"
                android:inputType="textPersonName"
                android:textColor="#717171"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số Lượng:"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_nhap_soluong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:ems="10"
                android:hint="Nhập số lượng hàng"
                android:inputType="number"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày Nhập:"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/edt_nhap_ngaynhap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:ems="10"
                android:enabled="false"
                android:text="Ngày Nhập"
                android:inputType="textPersonName"
                android:textColor="#717171"
                android:textSize="24sp" />
        </LinearLayout>


        <Button
            android:id="@+id/btn_nhap_them"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:backgroundTint="#EA8484"
            android:text="THÊM"
            android:layout_marginTop="50dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_nhap_huy"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:text="HỦY"
            android:backgroundTint="#EA8484"
            android:textColor="@color/black"
            android:textStyle="bold"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>