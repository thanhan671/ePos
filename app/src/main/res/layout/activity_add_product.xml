<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddProductActivity">

    <ImageView
        android:id="@+id/imgV_addProduct_back"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.031"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="415dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgV_addProduct_back">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toStartOf="@id/btn_addProduct_scanCode"
                    android:orientation="vertical">

                </LinearLayout>

                <Button
                    android:id="@+id/btn_addProduct_scanCode"
                    android:layout_width="114dp"
                    android:layout_height="55dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="33dp"
                    android:layout_marginEnd="15dp"
                    android:layout_toEndOf="@+id/et_addProduct_maCode"
                    android:backgroundTint="#CE93D8"
                    android:text="SCAN"
                    android:textColor="#00695C"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_addProduct_maCode"
                    android:layout_width="245dp"
                    android:layout_height="55dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:ems="10"
                    android:hint="Mã Barcode"
                    android:inputType="textPersonName"
                    android:textColor="#FF9800"
                    android:textColorHint="#FF9800"
                    android:textSize="20sp" />

            </RelativeLayout>


            <EditText
                android:id="@+id/et_addProduct_tenHH"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:ems="10"
                android:hint="Tên Hàng hóa"
                android:inputType="textPersonName"
                android:textAlignment="viewStart"
                android:textColor="#FF9800"
                android:textColorHint="#FF9800"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spnLoaiHH"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp" />

            <EditText
                android:id="@+id/et_addProduct_dvTinh"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:ems="10"
                android:hint="Đơn vị tính"
                android:inputType="textPersonName"
                android:textAlignment="viewStart"
                android:textColor="#FF9800"
                android:textColorHint="#FF9800"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_addProduct_tonKho"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:ems="10"
                android:hint="Tồn kho"
                android:inputType="number"
                android:textAlignment="viewStart"
                android:textColor="#FF9800"
                android:textColorHint="#FF9800"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_addProduct_dgNhap"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:ems="10"
                android:hint="Đơn giá nhập"
                android:inputType="number"
                android:textAlignment="viewStart"
                android:textColor="#FF9800"
                android:textColorHint="#FF9800"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_addProduct_dgXuat"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:ems="10"
                android:hint="Đơn giá xuất"
                android:inputType="number"
                android:textAlignment="viewStart"
                android:textColor="#FF9800"
                android:textColorHint="#FF9800"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_addProduct_addPro"
        android:layout_width="145dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#F8BBD0"
        android:text="THÊM MỚI"
        android:textColor="#3F51B5"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recV_addProduct"
        android:layout_width="380dp"
        android:layout_height="285dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_addProduct_addPro">

    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>