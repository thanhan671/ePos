<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Statistic">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroundedit"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:layout_editor_absoluteX="-147dp"
        tools:layout_editor_absoluteY="-365dp">

        <TextView
            android:id="@+id/tv_thongke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="BẢNG THỐNG KÊ"
            android:textAlignment="center"
            android:textColor="#FB8662"
            android:textSize="34sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/tv_SoPhieuNhap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số Phiếu Nhập:"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_PhieuNhap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:ems="10"
                android:enabled="false"
                android:inputType="textPersonName"
                android:textColor="#FB8662"
                android:textSize="24sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/tv_SoPhieuXuat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số Phiếu XUất:"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/edt_PhieuXuat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:ems="10"
                android:enabled="false"
                android:inputType="textPersonName"
                android:textColor="#FB8662"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/tv_SoLuong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiền Nhập:"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/edt_TienNhap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:enabled="false"
                android:ems="10"
                android:textColor="#FB8662"
                android:inputType="number"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/tv_TienXuat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiền Xuất:"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/edt_TienXuat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:ems="10"
                android:enabled="false"
                android:inputType="textPersonName"
                android:textColor="#FB8662"
                android:textSize="24sp" />
        </LinearLayout>
<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:orientation="vertical">

            <Button
                    android:id="@+id/btn_phieunhap"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="Phiếu Nhập"
                    android:backgroundTint="#EA8484"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
        <Button
    android:id="@+id/btn_phieuxuat"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:text="Phiếu Xuất"
    android:backgroundTint="#EA8484"
    android:textColor="@color/black"
    android:textStyle="bold"/>
</LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>